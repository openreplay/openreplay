{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "globals": {
    "require": true,
    "module": true,
    "console": true,
    "Promise": true,
    "Buffer": true,
    "URL": true,
    "global": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all"
    }]
  }
}
