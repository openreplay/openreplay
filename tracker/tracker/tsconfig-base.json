{
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution":  "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "exclude": ["**/*.test.ts"],
}