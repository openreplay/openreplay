{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignoreDeps": [
    "docker.io/bitnamilegacy/bitnami-shell",
    "docker.io/bitnamilegacy/kafka-exporter",
    "docker.io/bitnamilegacy/redis-sentinel-exporter"
  ],
  "enabledManagers": [
    "helmv3",
    "dockerfile",
    "helm-values",
    "docker-compose",
    "github-actions",
    "helm-requirements"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "description": "Allow major updates for Docker images",
      "matchManagers": [
        "docker",
        "helm-values",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
